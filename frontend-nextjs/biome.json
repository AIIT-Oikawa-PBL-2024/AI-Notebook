{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/build/**",
			"**/public/**",
			"**/.next/**",
			"**/.pnpm-store/**",
			"**/.vscode/**"
		],
		"include": [
			"app/**/*.js",
			"app/**/*.jsx",
			"app/**/*.ts",
			"app/**/*.tsx",
			"app/**/*.json",
			"__tests__/**/*.js",
			"__tests__/**/*.jsx",
			"__tests__/**/*.ts",
			"__tests__/**/*.tsx",
			"__tests__/**/*.json",
			"components/**/*.js",
			"components/**/*.jsx",
			"components/**/*.ts",
			"components/**/*.tsx",
			"components/**/*.json",
			"features/**/*.js",
			"features/**/*.jsx",
			"features/**/*.ts",
			"features/**/*.tsx",
			"features/**/*.json",
			"hooks/**/*.js",
			"hooks/**/*.jsx",
			"hooks/**/*.ts",
			"hooks/**/*.tsx",
			"hooks/**/*.json",
			"providers/**/*.js",
			"providers/**/*.jsx",
			"providers/**/*.ts",
			"providers/**/*.tsx",
			"providers/**/*.json",
			"lib/**/*.js",
			"lib/**/*.jsx",
			"lib/**/*.ts",
			"lib/**/*.tsx",
			"lib/**/*.json",
			"utils/**/*.js",
			"utils/**/*.jsx",
			"utils/**/*.ts",
			"utils/**/*.tsx",
			"utils/**/*.json"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
